{% extends 'base.html.twig' %}

{% block title %}Stress Assessment{% endblock %}

{% block body %}

<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="card shadow-sm">
      <div class="card-body p-5">
        <h1 class="text-center mb-4">
          <i class="fas fa-clipboard-check text-primary"></i>
          Student Stress Assessment
        </h1>

        <p class="text-center text-muted mb-5">
          Please answer the following questions honestly to get an accurate assessment of your stress levels.
        </p>

        {{ form_start(assessmentForm, { attr: { class: 'needs-validation' } }) }}

        {# === Emotional & Mental Health Section === #}
        <h4 class="text-primary mb-3">Emotional & Mental Health</h4>
        <div class="row g-3">
          {% for field in [
            'anxietyLevel', 'selfEsteem', 'mentalHealthHistory', 'depression', 'headache',
            'bloodPressure', 'sleepQuality', 'breathingProblem', 'noiseLevel', 'livingConditions', 'safety','basicNeeds'
          ] %}
            <div class="col-md-6">
              <div class="mb-3">
                {{ form_label(attribute(assessmentForm, field)) }}
                {{ form_widget(attribute(assessmentForm, field), { 'attr': {'class': 'form-select'} }) }}
                {{ form_errors(attribute(assessmentForm, field)) }}
              </div>
            </div>
          {% endfor %}
        </div>

        {# === Academic Section === #}
        <h4 class="text-primary mb-3 mt-4">Academic Factors</h4>
        <div class="row g-3">
          {% for field in ['academicPerformance', 'studyLoad', 'teacherStudentRelationship', 'futureCareerConcerns'] %}
            <div class="col-md-6">
              <div class="mb-3">
                {{ form_label(attribute(assessmentForm, field)) }}
                {{ form_widget(attribute(assessmentForm, field), { 'attr': {'class': 'form-select'} }) }}
                {{ form_errors(attribute(assessmentForm, field)) }}
              </div>
            </div>
          {% endfor %}
        </div>

        {# === Social Section === #}
        <h4 class="text-primary mb-3 mt-4">Social Environment</h4>
        <div class="row g-3">
          {% for field in ['socialSupport', 'peerPressure', 'extracurricularActivities', 'bullying'] %}
            <div class="col-md-6">
              <div class="mb-3">
                {{ form_label(attribute(assessmentForm, field)) }}
                {{ form_widget(attribute(assessmentForm, field), { 'attr': {'class': 'form-select'} }) }}
                {{ form_errors(attribute(assessmentForm, field)) }}
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="d-grid gap-2 mt-4">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-calculator"></i> Calculate My Stress Level
          </button>
          <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
          </a>
        </div>

        {{ form_end(assessmentForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
