{% extends 'base.html.twig' %}

{% block title %}Stress Assessment{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body p-5">
                <h1 class="text-center mb-4">
                    <i class="fas fa-clipboard-check text-primary"></i> Stress Assessment
                </h1>
                <p class="text-center text-muted mb-5">
                    Please answer the following questions honestly to get an accurate assessment of your stress levels.
                </p>

                {{ form_start(assessmentForm) }}
                    <div class="mb-4">
                        {{ form_label(assessmentForm.sleepHours) }}
                        {{ form_widget(assessmentForm.sleepHours) }}
                        {{ form_errors(assessmentForm.sleepHours) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(assessmentForm.workHours) }}
                        {{ form_widget(assessmentForm.workHours) }}
                        {{ form_errors(assessmentForm.workHours) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(assessmentForm.exerciseFrequency) }}
                        {{ form_widget(assessmentForm.exerciseFrequency) }}
                        {{ form_errors(assessmentForm.exerciseFrequency) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(assessmentForm.anxietyLevel) }}
                        {{ form_widget(assessmentForm.anxietyLevel) }}
                        {{ form_errors(assessmentForm.anxietyLevel) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(assessmentForm.moodLevel) }}
                        {{ form_widget(assessmentForm.moodLevel) }}
                        {{ form_errors(assessmentForm.moodLevel) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(assessmentForm.socialSupport) }}
                        {{ form_widget(assessmentForm.socialSupport) }}
                        {{ form_errors(assessmentForm.socialSupport) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(assessmentForm.additionalNotes) }}
                        {{ form_widget(assessmentForm.additionalNotes) }}
                        {{ form_errors(assessmentForm.additionalNotes) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-calculator"></i> Calculate My Stress Level
                        </button>
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Home
                        </a>
                    </div>
                {{ form_end(assessmentForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
