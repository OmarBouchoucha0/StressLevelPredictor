{% extends 'base.html.twig' %}

{% block title %}Stress Assessment{% endblock %}

{% block body %}

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body p-5">
        <h1 class="text-center mb-4">
          <i class="fas fa-clipboard-check text-primary"></i>
          Student Stress Assessment
        </h1>

        <p class="text-center text-muted mb-5">
          Please answer the following questions honestly to get an accurate assessment of your stress levels.
        </p>

        {{ form_start(assessmentForm, { attr: { class: 'needs-validation' } }) }}

        {# === Lifestyle Section === #}
        <h4 class="text-primary mb-3">Lifestyle</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.sleepHours) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.studyHours) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.extraCurricularHours) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.physicalActivity) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.dietQuality) }}
          </div>
        </div>

        {# === Emotional & Mental Health Section === #}
        <h4 class="text-primary mb-3 mt-4">Emotional & Mental Health</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.anxietyLevel) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.moodLevel) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.socialSupportLevel) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.relationshipStatus) }}
          </div>
        </div>

        {# === Academic Factors Section === #}
        <h4 class="text-primary mb-3 mt-4">Academic Factors</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.academicWorkload) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.examFrequency) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.teacherStudentRelationship) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.schoolType) }}
          </div>
        </div>

        {# === Financial & Future Concerns Section === #}
        <h4 class="text-primary mb-3 mt-4">Financial & Future Concerns</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.financialStress) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.futureCareerConcerns) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.familyIncome) }}
          </div>
        </div>

        {# === Social Environment Section === #}
        <h4 class="text-primary mb-3 mt-4">Social Environment</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.peerInfluence) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.remoteVsInPerson) }}
          </div>
        </div>

        {# === Coping Section === #}
        <h4 class="text-primary mb-3 mt-4">Coping Mechanisms</h4>
        <div class="mb-4">
          {{ form_row(assessmentForm.copingMechanisms) }}
        </div>

        <div class="d-grid gap-3 mt-4">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-calculator"></i> Calculate My Stress Level
          </button>
          <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
          </a>
        </div>

        {{ form_end(assessmentForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
