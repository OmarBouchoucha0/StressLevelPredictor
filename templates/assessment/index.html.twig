{% extends 'base.html.twig' %}

{% block title %}Stress Assessment{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body p-5">
        <h1 class="text-center mb-4">
          <i class="fas fa-clipboard-check text-primary"></i>
          Student Stress Assessment
        </h1>

        <p class="text-center text-muted mb-5">
          Please answer the following questions honestly to get an accurate assessment of your stress levels.
        </p>

        {{ form_start(assessmentForm, { attr: { class: 'needs-validation' } }) }}

        {# === Emotional & Mental Health Section === #}
        <h4 class="text-primary mb-3">Emotional & Mental Health</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.anxietyLevel) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.selfEsteem) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.mentalHealthHistory) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.depression) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.headache) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.bloodPressure) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.sleepQuality) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.breathingProblem) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.noiseLevel) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.livingConditions) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.safety) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.basicNeeds) }}
          </div>
        </div>

        {# === Academic Section === #}
        <h4 class="text-primary mb-3 mt-4">Academic Factors</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.academicPerformance) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.studyLoad) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.teacherStudentRelationship) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.futureCareerConcerns) }}
          </div>
        </div>

        {# === Social Section === #}
        <h4 class="text-primary mb-3 mt-4">Social Environment</h4>
        <div class="row">
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.socialSupport) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.peerPressure) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.extracurricularActivities) }}
          </div>
          <div class="col-md-6 mb-4">
            {{ form_row(assessmentForm.bullying) }}
          </div>
        </div>

        <div class="d-grid gap-2 mt-4">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-calculator"></i> Calculate My Stress Level
          </button>
          <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
          </a>
        </div>

        {{ form_end(assessmentForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
