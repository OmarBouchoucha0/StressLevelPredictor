{% extends 'base.html.twig' %}

{% block title %}Your Results{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-body p-5">
                <h1 class="text-center mb-5">
                    <i class="fas fa-poll-h text-primary"></i> Your Stress Assessment Results
                </h1>


                <div class="row mb-5 align-items-stretch">
                    <div class="col-md-6 text-center mb-4 d-flex">
                        <div class="p-4 bg-light rounded flex-fill">
                            <h3 class="text-muted mb-3">Stress Score</h3>
                            <h1 class="display-3 text-primary mb-0">{{ assessment.stressScore }}</h1>
                            <p class="text-muted">out of 100</p>
                        </div>
                    </div>
                    <div class="col-md-6 text-center mb-4 d-flex">
                        <div class="p-4 bg-light rounded flex-fill">
                            <h3 class="text-muted mb-3">Stress Level</h3>
                            {% set badgeClass = assessment.stressLevel == 'Low' ? 'success' :
                                            (assessment.stressLevel == 'Moderate' ? 'warning' :
                                            (assessment.stressLevel == 'High' ? 'danger' : 'dark')) %}
                            <h1 class="display-4">
                                <span class="badge bg-{{ badgeClass }}">{{ assessment.stressLevel }}</span>
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h3 class="mb-4">
                        <i class="fas fa-lightbulb text-warning"></i> Recommended Actions
                    </h3>
                    <div class="list-group">
                        {% for recommendation in recommendations %}
                        <div class="list-group-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            {{ recommendation }}
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="alert alert-info mb-4">
                    <i class="fas fa-info-circle"></i>
                    <strong>Note:</strong> This assessment is for informational purposes only and is not a substitute
                    for professional medical advice. If you're experiencing severe stress or mental health concerns,
                    please consult with a healthcare professional.
                </div>

                <div class="d-grid gap-2">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-home"></i> Back to Home
                    </a>
                    <a href="{{ path('app_assessment') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-redo"></i> Take Another Assessment
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
